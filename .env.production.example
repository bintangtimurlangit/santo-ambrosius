# Production Environment Variables
NODE_ENV=production

# Payload CMS
PAYLOAD_SECRET=your-super-secret-production-key-here

# MongoDB (with authentication)
DATABASE_URI=mongodb://${MONGO_APP_USERNAME}:${MONGO_APP_PASSWORD}@localhost:27017/${MONGO_DATABASE}?authSource=${MONGO_DATABASE}
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-mongo-password
MONGO_DATABASE=santo-ambrosius
MONGO_APP_USERNAME=appuser
MONGO_APP_PASSWORD=your-app-user-password

# Next.js Public Environment Variables
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_SERVER_URL=https://yourdomain.com

# Sentry Build Plugin Environment Variables
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Media Storage
MEDIA_STORAGE_PATH=/app/media
